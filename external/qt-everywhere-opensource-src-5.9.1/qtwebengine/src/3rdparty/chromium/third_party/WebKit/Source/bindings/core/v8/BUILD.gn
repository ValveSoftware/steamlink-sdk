  sources = core_definition_idl_files
  outputs = [
    "$bindings_core_v8_output_dir/V8GeneratedCoreBindings.cpp",
  ]
  component = "core"
  public_deps = [
    ":generate_bindings_core_v8_interfaces",
  ]
}

