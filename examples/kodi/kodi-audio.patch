+  double GetSLDelaySecs(); // Get steam link delay in seconds
+
+  // AE stuff
+  AEAudioFormat m_format;
+  double        m_lastPackageStamp;
+  double        m_delaySec; // Estimated delay in seconds
+
+  // Steam Link stuff
+  void* m_context;
+  void* m_stream;
