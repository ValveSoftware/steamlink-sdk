+#define SL_SAMPLE_RATE  48000
+#define SINK_FEED_MS    50 // Steam Link game streaming uses 10ms
+#define CACHE_TOTAL_MS  200
+
+using namespace STEAMLINK;
+
+namespace STEAMLINK
+{
+  extern uint32_t g_unQueuedVideoMS;
